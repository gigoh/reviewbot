{
  "name": "gitlab-reviewbot",
  "version": "1.0.0",
  "description": "AI-powered code review bot for GitLab merge requests",
  "main": "dist/index.js",
  "bin": {
    "reviewbot": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "bun run src/cli.ts",
    "start": "bun run dist/cli.js",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "keywords": [
    "gitlab",
    "code-review",
    "ai",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@gitbeaker/rest": "^40.2.1",
    "@octokit/rest": "^21.0.2",
    "commander": "^12.1.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
